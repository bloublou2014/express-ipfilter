# NodeJS master editor config
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{example,lib,src,test}/**.js]
indent_style = space
indent_size = 2

[Gruntfile.js]
indent_style = space
indent_size = 2

[configure]
indent_style = space
indent_size = 2

[{test/fixtures,deps,tools/eslint,tools/gyp,tools/icu,tools/msvs}/**]
insert_final_newline = false

[*.ts]
quote_type = single
